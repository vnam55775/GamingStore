@model Gaming
<div class="card" style="width: 100%;">
        <div class="card-body">
            <h5 class="card-title">
                @Model.Title
            </h5>
            <img src="@Model.Description" style="width:200px; height:200px;" />
        </div>
        <div class="price" style="margin:0.5rem;">
            <span class="badge badge-pill badge-primary">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </div>
        <form id="@Model.GamingID" asp-page="/MyCart" method="post">
            <input type="hidden" asp-for="GamingID" />
            <input type="hidden" name="returnUrl"
                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <div class="card-text p-1">
                <button type="submit"
                        class="btn btn-warning btn-sm pull-right">
                    Thêm vào giỏ hàng
                    <i class="fa-solid fa-cart-plus"></i>
                </button>
            </div>
        </form>
    </div>